{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "esModuleInterop": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "noEmit": true,
    "skipLibCheck": false,
    "target": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts", "*.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
